@page "/"
@inject NavigationManager NavigationManager

<PageTitle>LinqStudio</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
	<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">
		Welcome to LinqStudio
	</MudText>
	
	<MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Secondary" Class="mb-8">
		Your IDE for EF Core LINQ queries
	</MudText>
	
	<MudGrid Spacing="4" Justify="Justify.Center">
		<MudItem xs="12" sm="6" md="4">
			<MudCard Style="height: 100%; display: flex; flex-direction: column;">
				<MudCardContent Style="flex: 1;">
					<MudText Typo="Typo.h6">
						<MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-2" />
						New Project
					</MudText>
					<MudText Typo="Typo.body2" Class="mt-2">
						Create a new LinqStudio project to start writing LINQ queries.
					</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Text" 
							   Color="Color.Primary" 
							   Href="/projects">
						Get Started
					</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
		
		<MudItem xs="12" sm="6" md="4">
			<MudCard Style="height: 100%; display: flex; flex-direction: column;">
				<MudCardContent Style="flex: 1;">
					<MudText Typo="Typo.h6">
						<MudIcon Icon="@Icons.Material.Filled.Code" Class="mr-2" />
						Query Editor
					</MudText>
					<MudText Typo="Typo.body2" Class="mt-2">
						Write and execute EF Core LINQ queries with IntelliSense support.
					</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Text" 
							   Color="Color.Primary" 
							   Href="/editor">
						Open Editor
					</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
		
		<MudItem xs="12" sm="6" md="4">
			<MudCard Style="height: 100%; display: flex; flex-direction: column;">
				<MudCardContent Style="flex: 1;">
					<MudText Typo="Typo.h6">
						<MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-2" />
						Settings
					</MudText>
					<MudText Typo="Typo.body2" Class="mt-2">
						Configure LinqStudio preferences and appearance.
					</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Text" 
							   Color="Color.Primary" 
							   Href="/settings">
						Configure
					</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
	</MudGrid>
</MudContainer>
